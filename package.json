{
  "name": "monkey-lang",
  "version": "1.0.0",
  "description": "Monkey programming language interpreter and compiler",
  "scripts": {
    "format": "prettier --log-level silent --write . && pnpm run format:bash",
    "format:bash": "shfmt -w scripts/bash",
    "format:check": "prettier --ignore-path .gitignore --check . && pnpm run format:check:bash",
    "format:check:bash": "shfmt -d scripts/bash",
    "setup:rust": "ts-node scripts/ts/setup-rust.ts",
    "prepare": "husky"
  },
  "author": "Harsh Thakur",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "shfmt": "^0.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
